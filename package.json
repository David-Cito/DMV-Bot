{
  "name": "dmv-appointment-bot",
  "version": "1.0.0",
  "description": "Basic Playwright automation template",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dispatch": "node -e \"Promise.resolve(require('./dist/apps/worker/queue_dispatch.js').runDispatcher()).catch((e) => { console.error(e); process.exit(1); })\"",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui"
  },
  "keywords": [
    "playwright",
    "automation",
    "testing"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.90.1",
    "nodemailer": "^6.9.14"
  }
}
